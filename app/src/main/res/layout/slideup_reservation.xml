<?xml version="1.0" encoding="utf-8"?>
<layout
    android:id="@+id/slideup_reservation"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="Swipe up"
            android:textSize="16sp" />

        <SearchView
            android:id="@+id/reservation_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:clickable="true"
            android:focusable="true" />

        <ListView
            android:id="@+id/reservation_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reservation_search"
            android:layout_alignParentStart="true">

        </ListView>

        <Button
            android:id="@+id/reservation_ok"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/reservation_list"
            android:background="@color/colorAccent"
            android:text="OK"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</layout>
