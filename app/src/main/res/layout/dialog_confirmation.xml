<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/equipment_details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/linear_confirmation"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center">

       <TextView
           android:id="@+id/reason_title"
           android:layout_width="300dp"
           android:layout_height="30dp"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:gravity="center"
           android:text="Reason Title"
           android:textAlignment="center"
           android:textSize="15sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/confirmation_reason"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Reason"
           android:textSize="15sp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"/>

       <EditText
           android:id="@+id/confirmation_why"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:hint="What is the reason to deny the request?"/>
   </LinearLayout>


</LinearLayout>