<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#100A0A"
            android:gravity="center|top"
            app:srcCompat="@android:drawable/editbox_background" />

        <SearchView
            android:id="@+id/reservation_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:clickable="true"
            android:focusable="true"/>

        <ListView
            android:id="@+id/reservation_list"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:layout_below="@+id/reservation_search"
            android:layout_alignParentStart="true">

        </ListView>

        <Button
            android:id="@+id/reservation_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/reservation_list"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="OK" />

    </RelativeLayout>
</layout>